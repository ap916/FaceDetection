<Page
    x:Class="FaceDetection.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FaceDetection"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Grid Background="#FFB8CBCF" >

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button Name="CaptureButton" Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,10,0,10" Content="Search For People" Click="CaptureButton_Click" />
        <TextBlock Name="TitleText" Text="Find Familiar Faces" Grid.Row="0" HorizontalAlignment="Center" Margin="10,10,10,10" FontSize="20"/>
        <Image x:Name="CaptureImage" Grid.Row="1" HorizontalAlignment="Center" />

    </Grid>
</Page>
